        getCoursesList()
    );
    function SEARCHFUNC() {
        debugger
        $('.destroyInsList').empty();
        getCoursesList2();
    };
    function getCoursesList() {
        debugger
        var neighborhoodsCode = $('#neighborhood').val();
        var formdata = new FormData();
        formdata.append('neighborhoodsCode', neighborhoodsCode);
        $.ajax({
            type: "POST",
            url: '/Home/GetRealEstateList',
            data: formdata,
            processData: false,
            contentType: false,
            success: function (data) {
                new List('InstructorList', options, data.data);
            },
            error: function (request, status, error) {
                swal.fire("Hata!", "Bir sorun ile karşılaşıldı!", "error");
            }
        });
    };
    function getCoursesList2() {
        debugger
        var neighborhoodsCode = $('#neighborhood').val();
