<script>
    const options = {
        valueNames: ['ID', 'Title', { attr: 'href', name: 'EstateURL' }, { attr: 'src', name: 'Image' }, 'FloorCount', 'FloorLocation', 'Location', 'Price', 'EstateRoom', 'AreaBrüt'],
