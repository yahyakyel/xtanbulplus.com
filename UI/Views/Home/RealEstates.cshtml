            }
        });
    };

    $('#Cities').change(function myfunction() {
        debugger
        var CityKey = $('#Cities').val();
        var formData = new FormData();
        formData.append('citiesCode', CityKey);
        $.ajax({
            type: "POST",
            url: '/Home/DistrictForCities',
            processData: false,
            contentType: false,
            data: formData,
            success: function (data) {
                debugger
                $('#District').prop('disabled', false);
                $('#NeighbourhoodID').prop('disabled', true);
                var list1 = "";
                for (var i = 0; i < data['data'].length; i++) {
                    list1 += `<option value="` + data['data'][i]['DistrictKey'] + `">` + data['data'][i]['DistrictName'] + `</option>`;
                }
                $('#District').empty();
                $('#District').append(list1);
            },
            error: function (request, status, error) {
                swal.fire("Hata!", "Bir sorun ile karşılaşıldı!", "error");
            }
        });
    });
    $('#District').change(function myfunction() {
        var DistrictKey = $('#District').val();
        var formData = new FormData();
        formData.append('DistrictKey', DistrictKey);
        $.ajax({
            type: "POST",
            url: '/Home/NeighbourhoodsForDistrict',
            processData: false,
            contentType: false,
            data: formData,
            success: function (data) {
                debugger
                $('#neighborhood').prop('disabled', false);
                var list1 = "";
                for (var i = 0; i < data['data'].length; i++) {
