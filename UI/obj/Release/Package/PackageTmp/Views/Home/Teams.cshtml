@using Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ClassLibrary1.Models.Teams> teams = Query.GetAllTeamMember();
}
<div class="cities">
    <div class="container">
        <div class="row mt-4">
            <div class="col" style=" text-align: center; ">
                <div class="section_title">
                    Sektörün Uzman ve Profesyonel Ekibine Sahibiz
                </div>
                <div class="section_subtitle" style=" line-height: 1.4; ">
                    Portföyünde Türkiye’nin en lüks ve prestijli projelerine sahip olan şirketimiz, dünyanın her yerinde iş bağlantılarına sahip olup, çok dilli ve çok kültürlü ekibiyle birinci sınıf hizmet sunmaktadır.

                    Amacımız, dürüstlük, empati ve şeffaflık üzerine kurulu bir itibarı yansıtan hizmet sunmaktır. Xtanbul Plus adını müşterilerimiz için bir önceki günden daha anlamlı kılmak için her gün yeni şeyler keşfediyor ve kendimizi geliştiriyoruz.
                </div>
            </div>
        </div>
        <div class="row recent_row">
            <div class="col">
                <div class="row" style=" justify-content: center; ">
                    @foreach (var item in teams)
                    {

                        <div class="col-lg-4 col-md-6 ">
                            <div class="realtor_outer">
                                <div class="realtor">
                                    <div class="realtor_image">
                                        <figcaption style=" position: absolute; bottom: 10px; left: 10px; right: 10px; display: -webkit-box; display: -moz-box; display: -webkit-flex; display: -ms-flexbox; display: box; display: flex; -webkit-box-pack: end; -moz-box-pack: end; -o-box-pack: end; -ms-flex-pack: end; -webkit-justify-content: flex-end; justify-content: flex-end;">
                                            <a href="tel:+@item.PhoneNumber" class="phone pt-1 pb-1 pr-2" style=" background: #1f2337; margin-right: auto; color: #fff; text-align: center; ">
                                                <i class="fa fa-phone" style="width: 30px; position: relative; color: #c7a86e;"></i>
                                                <span>@item.PhoneNumber</span>
                                            </a>
                                        </figcaption>
                                        <img src="@item.Image" alt="" style=" width: 100%; ">
                                    </div>
                                    <div class="realtor_body">
                                        <div class="realtor_title">@item.FirstName.ToUpper() @item.LastName.ToUpper()</div>
                                        <div class="realtor_subtitle">@item.Title</div>
                                    </div>
                                </div>
                                <div class="realtor_link_background_container">
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>